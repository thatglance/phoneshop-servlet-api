<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Phoneshop servlet api training</display-name>

  <context-param>
    <param-name>insertSampleData</param-name>
    <param-value>true</param-value>
  </context-param>

  <listener>
    <listener-class>com.es.phoneshop.web.SampleDataServletContextListener</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>productList</servlet-name>
    <servlet-class>com.es.phoneshop.web.ProductListPageServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>productList</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>productDetails</servlet-name>
    <servlet-class>com.es.phoneshop.web.ProductDetailsPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>productDetails</servlet-name>
    <url-pattern>/products/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>cart</servlet-name>
    <servlet-class>com.es.phoneshop.web.CartPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>cart</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>cartItemDelete</servlet-name>
    <servlet-class>com.es.phoneshop.web.CartItemDeleteServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>cartItemDelete</servlet-name>
    <url-pattern>/cart/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>cartFilter</filter-name>
    <filter-class>com.es.phoneshop.web.CartFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>cartFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>checkout</servlet-name>
    <servlet-class>com.es.phoneshop.web.CheckoutPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>checkout</servlet-name>
    <url-pattern>/checkout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>orderOverview</servlet-name>
    <servlet-class>com.es.phoneshop.web.OrderOverviewPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>orderOverview</servlet-name>
    <url-pattern>/orderOverview/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>quickOrderEntry</servlet-name>
    <servlet-class>com.es.phoneshop.web.QuickOrderEntryServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>quickOrderEntry</servlet-name>
    <url-pattern>/quickOrder</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/pages/error.jsp</location>
  </error-page>
</web-app>
